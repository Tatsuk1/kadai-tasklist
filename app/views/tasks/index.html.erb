<% if logged_in? %>
  <div class="row">

    <h1>タスク一覧</h1>
    <% if @tasks.any? %>
      <div class="col-sm-8">
        <table class="table table-bordered">
          <thread>
            <tr>
              <th>id</th>
              <th>タスク</th>
              <th>ステータス</th>
            </tr>
          </thread>
          <tbody>
            <% @tasks.each do |task| %>
              <tr>
                <td><%= link_to task.id, task %></td>
                <td><%= task.content %></td>
                <td><%= task.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
     <% end %>
     

    </div>
    <%= link_to '新規メッセージの投稿', new_task_path , class: 'btn btn-success btn-primary' %>
  </div>
<% end %>